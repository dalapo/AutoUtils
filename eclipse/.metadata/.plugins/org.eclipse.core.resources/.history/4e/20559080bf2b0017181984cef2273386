package dalapo.autoutils.helper;

import net.minecraft.inventory.IInventory;
import net.minecraft.item.ItemStack;

public class TileEntityHelper {
	private TileEntityHelper() {}
	
	public static ItemStack tryInsertItem(IInventory inv, ItemStack itemstack)
	{
		for (int i=0; i<inv.getSizeInventory(); i++)
		{
			if (inv.getStackInSlot(i) == null)
			{
				inv.setInventorySlotContents(i, itemstack);
				itemstack.stackSize = 0;
			}
			if (itemstack.stackSize == 0) return 0;
		}
	} // Returns remainder of stack once inventory is full
}
